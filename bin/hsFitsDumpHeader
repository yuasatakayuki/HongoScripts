#!/bin/bash

# Takayuki Yuasa 20150714

if [ _$3 = _ ]; then
	echo "Provide fits file, HDU index (0 start), and output file name."
	exit
fi


fitsFile=$1
hduIndex=$2
#increment hduIndex for FTOOLS notation
hduIndex=$(calc "$hduIndex+1")
outputFile=$3

fdump infile="$fitsFile[$hduIndex]" outfile=$outputFile prhead=yes prdata=no columns=- rows=- clobber=yes