#!/usr/bin/env perl

#20081123 Takayuki Yuasa
#20090512 Takayuki Yuasa script name changed
#20100124 perl path fixed

if(@ARGV==0 or @ARGV%2!=0){
 print "usage matrix_connect_column FILE0 COLUMN0 FILE1 COLUMN1 ... FILE_N COLUMN_N\n";
 exit;
}

$nofline=0;

for($i=0;$i<@ARGV;$i+=2){
 $file=$ARGV[$i];
 $column=$ARGV[$i+1];
 $n=$i/2;
 $tmpout=".tmp_connect_column_$n";
 system("matrix_get_column $file $column > $tmpout");
 open(FILE,$tmpout);
 @file=<FILE>;close FILE;
 if($i==0){
  $nofline=@file;
 }else{
  if(@file!=$nofline){
   print STDERR "error row numbers differ\n";
   system("rm .tmp_connect_column*");
   exit(-1);
  }
 }
 $o=0;
 foreach $line (@file) {
  chomp($line);
  if($n!=0){
   $outfile[$o]=$outfile[$o]." ".$line;
  }else{
   $outfile[$o]=$line;
  }
  $o++;
 }
}


for($row=0;$row<$nofline;$row++){
 print $outfile[$row]."\n";
}


system("rm .tmp_connect_column*");
